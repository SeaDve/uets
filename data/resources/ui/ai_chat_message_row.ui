<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="UetsAiChatMessageRow" parent="GtkListBoxRow">
    <property name="activatable">False</property>
    <property name="selectable">False</property>
    <property name="child">
      <object class="GtkStack" id="stack">
        <child>
          <object class="GtkBox" id="user_page">
            <child>
              <object class="GtkLabel" id="user_message_label">
                <property name="hexpand">True</property>
                <property name="halign">end</property>
                <property name="xalign">1.0</property>
                <property name="wrap">True</property>
                <style>
                  <class name="user-message-label"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox" id="ai_page">
            <child>
              <object class="AdwAvatar">
                <property name="valign">start</property>
                <property name="margin-top">6</property>
                <property name="margin-bottom">6</property>
                <property name="icon-name">brain-augmented-symbolic</property>
                <property name="text">AI</property>
                <property name="size">24</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="ai_message_label">
                <property name="hexpand">True</property>
                <property name="halign">start</property>
                <property name="xalign">0.0</property>
                <property name="wrap">True</property>
                <style>
                  <class name="ai-message-label"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
