<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <template class="UetsEntryWindow" parent="AdwWindow">
    <property name="default-width">320</property>
    <property name="default-height">544</property>
    <property name="width-request">320</property>
    <property name="height-request">544</property>
    <property name="content">
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="margin-bottom">24</property>
        <child>
          <object class="AdwHeaderBar">
            <property name="show-start-title-buttons">False</property>
            <property name="show-end-title-buttons">False</property>
            <property name="title-widget">
              <object class="AdwWindowTitle">
                <property name="title">Enter Data</property>
              </object>
            </property>
            <style>
              <class name="flat"/>
            </style>
          </object>
        </child>
        <child>
          <object class="AdwPreferencesPage">
            <property name="vexpand">True</property>
            <child>
              <object class="AdwPreferencesGroup">
                <child>
                  <object class="AdwActionRow" id="stock_id_row">
                    <property name="title">Stock Name</property>
                    <child type="suffix">
                      <object class="GtkDropDown" id="stock_id_dropdown">
                        <property name="valign">center</property>
                        <property name="show-arrow">False</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="AdwEntryRow" id="location_row">
                    <property name="title">Location</property>
                  </object>
                </child>
                <child>
                  <object class="AdwEntryRow" id="expiration_dt_row">
                    <property name="title">Expiration Date</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="halign">center</property>
            <property name="spacing">12</property>
            <child>
              <object class="GtkButton">
                <property name="action-name">entry-window.cancel</property>
                <property name="label">Cancel</property>
                <style>
                  <class name="pill"/>
                </style>
              </object>
            </child>
            <child>
              <object class="GtkButton">
                <property name="action-name">entry-window.done</property>
                <property name="label">Done</property>
                <style>
                  <class name="suggested-action"/>
                  <class name="pill"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </property>
  </template>
</interface>
